            justify-content: center;
            gap: 2rem;
            margin-top: 3rem;
            margin-bottom: 2.5rem;
            flex-wrap: wrap;
        }
        .menu-category {
            display: flex;
            flex-direction: column;
            align-items: center;
            cursor: pointer;
            padding: 1rem 1.5rem;
            border-radius: 1.5rem;
            background: #fff;
            box-shadow: 0 2px 12px rgba(0,0,0,0.07);
            transition: box-shadow 0.2s, background 0.2s;
            min-width: 110px;
        }
        .menu-category.active, .menu-category:hover {
            background: #28a745;
            color: #fff;
            box-shadow: 0 6px 24px rgba(40,167,69,0.15);
        }
        .menu-category i {
            font-size: 2.2rem;
            margin-bottom: 0.5rem;
        }
        .menu-category span {
            font-size: 1.1rem;
            font-weight: 500;
        }
        .menu-section {
            display: none;
            animation: fadeEffect 0.7s;
        }
        .menu-section.active {
            display: block;
        }
        @keyframes fadeEffect {
            from {opacity: 0;}
            to {opacity: 1;}
        }
        .modern-menu-row {
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
            justify-content: center;
        }
        .modern-menu-card {
            background: #fff;
            border-radius: 1.5rem;
            box-shadow: 0 2px 12px rgba(0,0,0,0.07);
            padding: 1.5rem 1.2rem 1.2rem 1.2rem;
            max-width: 340px;
            min-width: 260px;
            flex: 1 1 260px;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 2rem;
            transition: box-shadow 0.2s, transform 0.2s;
        }
        .modern-menu-card:hover {
            box-shadow: 0 8px 32px rgba(40,167,69,0.15);
            transform: translateY(-6px) scale(1.03);
        }
        .modern-menu-img {
            width: 100%;
            max-width: 220px;
            height: 170px;
            object-fit: cover;
            border-radius: 1rem;
            margin-bottom: 1rem;
            background: #f8fafc;
        }
        .modern-menu-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #222;
            text-align: center;
        }
        .modern-menu-desc {
            font-size: 1rem;
            color: #666;
            margin-bottom: 0.7rem;
            text-align: center;
        }
        .modern-menu-price {
            font-size: 1.15rem;
            font-weight: 700;
            color: #28a745;
            margin-bottom: 0.7rem;
        }
        .modern-menu-rating {
            margin-bottom: 0.7rem;
        }
        .modern-menu-add {
            background: #28a745;
            color: #fff;
            border: none;
            border-radius: 0.75rem;
            padding: 0.6rem 1.5rem;
            font-size: 1.1rem;
            font-weight: 600;
            transition: background 0.2s, transform 0.2s;
            cursor: pointer;
        }
        .modern-menu-add:hover {
            background: #218838;
            transform: scale(1.07);
        }
        @media (max-width: 900px) {
            .modern-menu-row {
                gap: 1rem;
            }
            .modern-menu-card {
                min-width: 180px;
                max-width: 100%;
            }
        }
        @media (max-width: 600px) {
            .menu-category-bar {
